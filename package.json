{
  "name": "clean-the-mess",
  "version": "1.0.0",
  "description": "Hundreds of opened tabs? Dozens of useless duplicate tabs with opened emails, google searches, your favourite social networks and articles you wanted to read a month ago? Let's clean the mess!",
  "main": "src/popup/popup.js",
  "scripts": {
    "build": "parcel build src/manifest.json --dist-dir dist/test --no-content-hash --no-source-maps --no-cache --no-scope-hoist",
    "watch": "parcel src/manifest.json --dist-dir dist/test --no-cache",
    "start": "npm run chrome && npm run firefox",
    "test": "jest",
    "firefox": "web-ext run -s ./dist/firefox",
    "chrome": "web-ext run -t chromium -s ./dist/chrome",
    "firefox:src": "web-ext run -s ./src",
    "chrome:src": "web-ext run -t chromium -s ./src",
    "firefox:build": "web-ext build -a ./build/firefox",
    "chrome:build": "web-ext build -a ./build/chrome",
    "old-build": "NODE_ENV=production gulp build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomas-hartman/clean-the-mess.git"
  },
  "keywords": [
    "addon",
    "mozilla",
    "tabs"
  ],
  "author": "Tomas Hartman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tomas-hartman/clean-the-mess/issues"
  },
  "homepage": "https://github.com/tomas-hartman/clean-the-mess#readme",
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.0",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-react": "^7.13.13",
    "@parcel/config-webextension": "^2.0.0-beta.3.1",
    "@parcel/transformer-js": "^2.0.0-beta.3.1",
    "@parcel/transformer-sass": "^2.0.0-beta.3.1",
    "@parcel/transformer-webextension": "^2.0.0-beta.3.1",
    "babel-jest": "^26.6.1",
    "connect-livereload": "^0.6.1",
    "eslint": "^7.25.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gulp": "^4.0.2",
    "gulp-sass": "^4.1.0",
    "jest": "^26.6.1",
    "livereload": "^0.9.1",
    "node-sass": "^5.0.0",
    "parcel": "^2.0.0-beta.3.1",
    "web-ext": "^6.1.0"
  },
  "dependencies": {
    "express": "^4.17.1",
    "gulp-exec": "^5.0.0",
    "gulp-merge-json": "^2.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "webextension-polyfill": "^0.8.0"
  },
  "targets": {
    "main": false
  },
  "webExt": {
    "sourceDir": "dist/test"
  },
  "browserslist": [
    "last 1 Chrome version",
    "last 1 Firefox version"
  ]
}
