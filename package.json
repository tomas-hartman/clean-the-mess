{
  "name": "clean-the-mess",
  "version": "1.0.0",
  "description": "Hundreds of opened tabs? Dozens of useless duplicate tabs with opened emails, google searches, your favourite social networks and articles you wanted to read a month ago? Let's clean the mess!",
  "main": "src/popup/popup.js",
  "scripts": {
    "build:firefox": "npm run build -w packages/firefox",
    "build:chrome": "npm run build -w packages/chrome",
    "build:release:firefox": "npm run build:release -w packages/firefox",
    "build:release:chrome": "npm run build:release -w packages/chrome",
    "build:release": "npm run build:release:firefox && npm run build:release:chrome",
    "test": "jest",
    "start:browsers": "npm run chrome && npm run firefox",
    "firefox": "npm run start -w packages/firefox",
    "chrome": "npm run start -w packages/chrome",
    "dev:chrome": "npm run dev -w packages/chrome",
    "dev:firefox": "npm run dev -w packages/firefox",
    "storybook": "npm run storybook -w packages/common",
    "bump-version": "npm version $mode --no-git-tag-version --preid=dev --workspaces",
    "postbump-version": "./scripts/bump-manifest-version.sh && npm run generate-manifest -w packages/chrome -w packages/firefox",
    "bump-version:patch": "mode=patch npm run bump-version",
    "bump-version:minor": "mode=minor npm run bump-version",
    "bump-version:major": "mode=major npm run bump-version",
    "bump-version:prepatch": "mode=prepatch npm run bump-version",
    "bump-version:preminor": "mode=preminor npm run bump-version",
    "bump-version:premajor": "mode=premajor npm run bump-version",
    "bump-version:prerelease": "mode=prerelease npm run bump-version",
    "ts:check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomas-hartman/clean-the-mess.git"
  },
  "keywords": [
    "addon",
    "mozilla",
    "tabs"
  ],
  "author": "Tomas Hartman <tomas.hartman@hotmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tomas-hartman/clean-the-mess/issues"
  },
  "homepage": "https://github.com/tomas-hartman/clean-the-mess#readme",
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.3",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@parcel/config-webextension": "^2.8.3",
    "@parcel/transformer-js": "^2.8.3",
    "@parcel/transformer-sass": "^2.8.3",
    "@parcel/transformer-svg-react": "^2.8.3",
    "@parcel/transformer-webextension": "^2.8.3",
    "@svgr/webpack": "^6.5.1",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vanilla-extract/parcel-transformer": "^1.0.0",
    "@vanilla-extract/webpack-plugin": "^2.2.0",
    "babel-jest": "^27.5.1",
    "css-loader": "^6.7.3",
    "dir-archiver": "^1.2.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-storybook": "^0.6.11",
    "jest": "^27.5.1",
    "node-sass": "^7.0.1",
    "parcel": "^2.8.3",
    "prettier": "2.8.4",
    "prop-types": "^15.8.1",
    "sass": "^1.59.3",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.2",
    "typescript": "^5.2.2",
    "web-ext": "^6.1.0",
    "yargs": "^7.1.2"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.10.0",
    "@vanilla-extract/recipes": "^0.4.0",
    "clsx": "^1.2.1",
    "node-jq": "^4.0.1",
    "polished": "^4.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "webextension-polyfill": "^0.10.0"
  },
  "targets": {
    "main": false
  },
  "webExt": {
    "sourceDir": "dist/test"
  },
  "workspaces": [
    "packages/chrome",
    "packages/firefox",
    "packages/common"
  ]
}
