{
  "name": "clean-the-mess-firefox",
  "version": "2.1.0-dev.0",
  "description": "",
  "devDependencies": {},
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "generate-manifest": "node ../../scripts/merge-manifests.js -f ./manifest.firefox.json  > ./manifest.json",
    "prebuild": "npm run generate-manifest",
    "build": "rimraf dist && parcel build ./manifest.json --no-content-hash --no-cache --no-source-maps --dist-dir dist",
    "start": "web-ext run -s ./dist --bc -c ../../web-ext-config.js",
    "predev": "npm run generate-manifest",
    "dev": "parcel ./manifest.json --dist-dir dist",
    "prewebext:build": "npm run build",
    "webext:build": "rimraf ./build && web-ext build -a ./build -s ./dist",
    "--build:firefox:src": "dir-archiver --src . --dest ./build/firefox/src_clean_the_mess.zip --exclude build dist .vscode .parcel-cache node_modules src/_dev .git **/.DS_Store"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  },
  "author": "Tomas Hartman <tomas.hartman@hotmail.com>",
  "license": "ISC"
}
