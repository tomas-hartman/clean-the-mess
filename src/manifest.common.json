{
  "manifest_version": 2,
  "name": "Clean the mess",
  "version": "2.0",

  "author": "Tomas Hartman",
  "description": "Helps with maintaining order within once opened and never-seen-again tabs as well with those visited way too often.",

  "permissions": [
    "activeTab",
    "tabs",
    "bookmarks",
    "storage"
  ],

  "background": {
    "scripts": ["background/background.js"]
  },

  "icons": {
    "16": "_icons/png/ico-light-16.png",
    "32": "_icons/png/ico-light-32.png",
    "128": "_icons/png/ico-light-128.png"
  },

  "browser_action": {
    "browser_style": false,
    "default_icon": {
      "16": "_icons/png/ico-light-16.png",
      "32": "_icons/png/ico-light-32.png",
      "128": "_icons/png/ico-light-128.png"
    },
    "default_title": "Clean the mess",
    "default_popup": "popup/popup.html",
    "theme_icons": [{
      "dark": "_icons/png/ico-light-16.png",
      "light": "_icons/png/ico-dark-16.png",
      "size": 16
    }, {
      "dark": "_icons/png/ico-light-32.png",
      "light": "_icons/png/ico-dark-32.png",
      "size": 32
    }]
  }
}