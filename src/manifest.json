{

    "manifest_version": 2,
    "name": "Clean the mess",
    "version": "1.2-alpha",
  
    "description": "Helps with maintaining order within once opened and never-seen-again tabs as well with those visited way too often.",
  
    "permissions": [
        "activeTab",
        "tabs",
        "bookmarks"
    ],
    
    "browser_action": {
        "browser_style": false,
        "default_icon": {
            "16": "icons/ico-light-16.svg",
            "32": "icons/ico-light-32.svg"
        },
        "default_title": "Clean the mess",
        "default_popup": "popup/popup.html",
        "theme_icons": [{
            "dark": "icons/ico-light-16.svg",
            "light": "icons/ico-dark-16.svg",
            "size": 16
          }, {
            "dark": "icons/ico-light-32.svg",
            "light": "icons/ico-dark-32.svg",
            "size": 32
          }]
    },

    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+Alt+T",
          "mac": "Ctrl+Alt+T"
        },
        "description": "Open extension popup"
      }
    }
  }